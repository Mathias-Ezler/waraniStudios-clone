      </div>

      <!-- Team Member 9 -->
      <div class="bg-black p-6 group relative overflow-hidden">
        <div class="aspect-w-3 aspect-h-4 mb-6 overflow-hidden">
          <img src="/team/member9.jpg" alt="Miembro 9" class="object-cover w-full h-full transform transition-transform duration-500 group-hover:scale-110">
