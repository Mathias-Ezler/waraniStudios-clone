const navItems = [
  { name: 'Inicio', url: '#video' },
  { name: 'Quiénes Somos', url: '#about' },
  { name: 'Nuestro Trabajo', url: '#nuestro-trabajo' },
  { name: 'Tienda', url: '#tienda' },
  { name: 'Contacto', url: '#contacto' }
];
---

<footer class="bg-black text-white">
  <div class="container mx-auto px-4 py-6">
    <!-- Logo y redes sociales -->
    <div class="flex flex-col md:flex-row justify-between items-center border-b border-white/20 pb-6">
      <!-- Logo -->
      <div class="mb-4 md:mb-0">
        <a href="/">
          <img src="/waralogo.png" alt="Logo de Waraní" class="h-16" />
        </a>
      </div>

      <!-- Redes sociales -->
      <div class="flex space-x-6">
        {socialIcons.map(social => (
          <a 
            href={social.url} 
            class="text-white hover:text-white/70 transition-opacity" 
            aria-label={social.name}
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="w-6 h-6" set:html={social.svg} />
          </a>
        ))}
      </div>
    </div>

    <!-- Menú de navegación -->
    <div class="py-6 flex justify-center border-b border-white/20">
      <nav class="flex flex-wrap justify-center gap-x-8 gap-y-3">
        {navItems.map(item => (
          <a 
            href={item.url} 
            class="text-white hover:text-white/70 transition-opacity"
          >
            {item.name}
          </a>
        ))}
      </nav>
    </div>

    <!-- Idiomas y copyright -->
    <div class="py-6 flex flex-col md:flex-row justify-between items-center">
      <!-- Idiomas -->
      <div class="flex space-x-6 mb-4 md:mb-0">
        <a href="#" class="flex items-center space-x-2 hover:text-white/70 transition-opacity">
          <img src="/svgs/spain.svg" alt="España" class="h-6">
          <span>ES</span>
        </a>
        <a href="#" class="flex items-center space-x-2 hover:text-white/70 transition-opacity">
          <img src="/svgs/eeuu.svg" alt="USA" class="h-6">
          <span>EN</span>
        </a>
      </div>

      <!-- Copyright -->
<div class="text-white/60 text-sm text-center md:text-left">
    <p class="mb-2">&copy; {new Date().getFullYear()} Waranístudios. Todos los derechos reservados desde el 2015.</p>
    <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-4">
      <p>Desarrollado por <a href="https://www.instagram.com/enzler_mathias/" class="text-white hover:text-white/80 transition-colors underline" target="_blank" rel="noopener noreferrer">@Mathias Enzler</a></p>
      <span class="hidden md:inline">|</span>
      <p>Inspirado en el diseño de <a href="https://www.instagram.com/rootpy/" class="text-white hover:text-white/80 transition-colors underline" target="_blank" rel="noopener noreferrer">@rootpy</a></p>
    </div>
  </div>
    </div>
  </div>
</footer>